{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "api/app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger"
      ],
      "jinja": true
    },
    {
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current Test Module",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "${file}"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Run All Tests",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "discover",
        "tests"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Tests (focused test)",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": [
        "tests.test_items.TestItems.test_health_check"
      ],
      "console": "integratedTerminal"
    }
  ]
}

